<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ParentHome">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/ll_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:visibility="visible">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="4dp"
                                    app:cardCornerRadius="2dp"
                                    app:contentPadding="8dp"
                                    app:strokeWidth="1dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="8dp">
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_switch_student"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                               android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                 android:layout_marginBottom="@dimen/space_10dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/teacher_attendance" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:fontFamily="@font/lexend"
                                                        android:text="Student \n Details"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.01" />
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_attendance"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_marginBottom="@dimen/space_10dp"
                                                android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/students_attendance" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:fontFamily="@font/lexend"
                                                        android:text="Student's Attendance"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.01" />
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_assignments"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_marginBottom="@dimen/space_10dp"
                                                android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/homework" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:text="Homework"
                                                        android:fontFamily="@font/lexend"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:orientation="horizontal"
                                            android:padding="8dp">
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_studentsLeave"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_marginBottom="@dimen/space_10dp"
                                                android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/students_leave" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:fontFamily="@font/lexend"
                                                        android:text="Students Leave"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.01" />
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_complaints"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_marginBottom="@dimen/space_10dp"
                                                android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/my_classes" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:fontFamily="@font/lexend"
                                                        android:text="Complaints"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.01" />
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_fee_report"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                android:layout_marginBottom="@dimen/space_10dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/student_info" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:fontFamily="@font/lexend"
                                                        android:text="Fee Report"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:orientation="horizontal"
                                            android:padding="8dp">
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_syllabus"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_marginBottom="@dimen/space_10dp"
                                                android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/students_leave" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:text="Syllabus"
                                                        android:fontFamily="@font/lexend"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.01" />
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_notice"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_marginBottom="@dimen/space_10dp"
                                                android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/my_classes" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:text="Notice"
                                                        android:fontFamily="@font/lexend"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                            <View
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0.01" />
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/card_time_table"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                android:layout_marginEnd="8dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardCornerRadius="8dp"
                                                app:cardElevation="16dp"
                                                android:layout_marginBottom="@dimen/space_10dp"
                                                app:contentPadding="12dp"
                                                app:strokeWidth="1dp">
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="80dp"
                                                    android:orientation="vertical">
                                                    <ImageView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_weight="1"
                                                        android:src="@drawable/student_info" />
                                                    <View
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_marginTop="8dp"
                                                        android:layout_weight="0.01"
                                                        android:background="@color/black" />
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="0dp"
                                                        android:layout_gravity="center"
                                                        android:layout_weight="1"
                                                        android:gravity="center"
                                                        android:text="Time Table"
                                                        android:fontFamily="@font/lexend"
                                                        android:textColor="@color/black"
                                                        android:textSize="12sp" />
                                                </LinearLayout>
                                            </androidx.cardview.widget.CardView>
                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/ll_select_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Student"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="18sp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_select_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/layout_student_details_single_row"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="3"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_bulletin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bulletin Board"
                        android:gravity="center"
                        android:fontFamily="@font/lexend"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>