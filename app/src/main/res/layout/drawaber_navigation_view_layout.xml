<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/lin_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/card_selected"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_baseline_settings_white_24dp"
                    app:tint="@color/white" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/li_user_profile"
                    android:layout_below="@+id/iv_setting"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/usericon1"
                    app:civ_circle_background_color="@color/white"
                    app:tint="@color/white" />
                <RelativeLayout
                    android:id="@+id/li_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="@color/card_selected"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="8dp"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/assign_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VCGHCGHC"
                            android:fontFamily="@font/lexend"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AFXHGJHGGH"
                            android:fontFamily="@font/lexend"
                            android:gravity="center"
                            android:layout_marginTop="6dp"
                            android:letterSpacing="0.1"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/li_home"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_home_24"
                            app:tint="@color/black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Home"
                            android:fontFamily="@font/lexend"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/li_subscription"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/black"
                            android:src="@drawable/ic_calender" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/lexend"
                            android:text="Your Attendance"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/li_bookmarks"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/space_10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/space_20dp"
                            android:layout_height="@dimen/space_20dp"
                            app:tint="@color/black"
                            android:src="@drawable/s_bookmark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10dp"
                            android:fontFamily="@font/lexend"
                            android:text="Assignment"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_download_video"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/space_10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/space_20dp"
                            android:layout_height="@dimen/space_20dp"
                            app:tint="@color/black"
                            android:src="@drawable/baseline_group_24" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10dp"
                            android:fontFamily="@font/lexend"
                            android:text="Students Leave"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/li_about_us"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/space_10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="@dimen/space_20dp"
                            android:layout_height="@dimen/space_30dp"

                            android:src="@drawable/baseline_message_24"
                            app:tint="@color/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10dp"
                            android:fontFamily="@font/lexend"
                            android:text="Notice"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/li_contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_marginTop="@dimen/space_10dp"
                        android:layout_marginEnd="@dimen/space_10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/space_30dp"
                            android:layout_height="@dimen/space_30dp"
                            android:layout_marginTop="@dimen/space_10dp"
                            android:src="@drawable/ic_calender" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10dp"
                            android:layout_marginTop="@dimen/space_15dp"
                            android:text="Contact Us"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_terms_condition"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/space_10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_salary"
                            android:layout_width="@dimen/space_20dp"
                            android:layout_height="@dimen/space_20dp"

                            app:tint="@color/black"
                            android:src="@drawable/baseline_currency_rupee_24" />

                        <TextView
                            android:id="@+id/txt_salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10dp"
                            android:fontFamily="@font/lexend"
                            android:text="Salary"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/li_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/space_10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/space_20dp"
                            android:layout_height="@dimen/space_20dp"
                            app:tint="@color/black"
                            android:src="@drawable/ic_password" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10dp"
                            android:fontFamily="@font/lexend"
                            android:text="Change Password"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/li_logout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="@dimen/space_16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="@dimen/space_10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/space_20dp"
                            android:layout_height="@dimen/space_20dp"
                            app:tint="@color/black"
                            android:src="@drawable/ic_power" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10dp"
                            android:fontFamily="@font/lexend"
                            android:text="Logout"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lin_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/back_to_home_button"
        android:backgroundTint="@color/primary_color"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="@dimen/space_10dp"
            android:padding="@dimen/space_8dp"
            android:text="Log out"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>